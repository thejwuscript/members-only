<h1>Homepage</h1>
<% @posts.each do |post| %>
  <% if user_signed_in? %>
    <h2><%= post.user.username %></h2>
  <% end %>
    <h4><%= post.title %></h4>
    <p><%= post.body %></p>
<% end %>

<%= link_to "Create Post", posts_new_path %>
<%= link_to "Sign Up", new_user_registration_path %>
<%= link_to "Sign In", new_user_session_path %>
<%= button_to 'Sign Out', destroy_user_session_path, method: :delete %>